{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": [
    "AI_GATEWAY_API_KEY",
    "APP_URL",
    "AUTUMN_PROD_SECRET_KEY",
    "AUTUMN_SECRET_KEY",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "DATABASE_URL",
    "FIRECRAWL_API_KEY",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "INTEGRATION_ENCRYPTION_KEY",
    "OPENROUTER_API_KEY",
    "QSTASH_URL",
    "QSTASH_CURRENT_SIGNING_KEY",
    "QSTASH_NEXT_SIGNING_KEY",
    "QSTASH_TOKEN",
    "RESEND_API_KEY",
    "SUPERMEMORY_API_KEY",
    "UPSTASH_REDIS_REST_TOKEN",
    "UPSTASH_REDIS_REST_URL",
    "DATABUDDY_DASHBOARD_WEBSITE_ID",
    "DATABUDDY_API_KEY",
    "CLOUDFLARE_SECRET_ACCESS_KEY",
    "CLOUDFLARE_ACCESS_KEY_ID",
    "CLOUDFLARE_S3_ENDPOINT",
    "CLOUDFLARE_PUBLIC_URL"
  ],
  "envMode": "strict",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".vercel/**"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
