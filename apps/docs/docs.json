{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Notra Documentation",
  "description": "Documentation for Notra, the content pipeline for teams.",
  "colors": {
    "primary": "#8b5cf6",
    "light": "#8b5cf6",
    "dark": "#8b5cf6"
  },
  "background": {
    "decoration": "windows"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": {
      "theme": {
        "light": "github-light",
        "dark": "github-dark"
      }
    }
  },
  "favicon": "/favicon.svg",
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "perplexity",
      {
        "title": "Open in T3 Chat",
        "description": "Ask questions about this page",
        "icon": "https://t3.chat/favicon.ico",
        "href": {
          "base": "https://t3.chat/new",
          "query": [
            {
              "key": "q",
              "value": "Read from https://docs.usenotra.com/$path so I can ask questions about it."
            }
          ]
        }
      }
    ]
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting started",
        "icon": "play",
        "pages": ["api/getting-started", "api/introduction"]
      },
      {
        "group": "API",
        "icon": "book-open",
        "openapi": {
          "source": "openapi.json",
          "directory": "api-reference"
        },
        "pages": [
          "GET /v1/{organizationId}/posts",
          "GET /v1/{organizationId}/posts/{postId}",
          "api/pagination",
          "api/types"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Discord Community",
          "href": "https://discord.gg/2qzGZDsnwB",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "favicon.svg",
    "dark": "favicon.svg"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/usenotra",
      "github": "https://github.com/usenotra"
    }
  }
}
